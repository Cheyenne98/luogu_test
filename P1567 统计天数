#include<bits/stdc++.h>  
using namespace std;  
int a[3];  
   int main(){  
          int n,x,num;  
          num=0;x=0;
    cin>>n;
    for(int i=1;i<=n;i++){
        cin>>a[2];
        if(a[2]>=a[1]){
            x++;
            num=max(num,x);
           }else x=1;
           a[1]=a[2];
           cout<<num<<endl;
       }

    cout<<num;

    return 0;
   }
   /*用a1,a2确实很巧妙但是我到现在也不知道我自己的错在哪里emm*/
   #include<bits/stdc++.h>  
using namespace std;
int main()
{
	int n,q=0;
	cin>>n;
	int a[100];
	
	int sum=0;
	for(int i=0;i<n;i++)
	{
		cin>>a[i];
	}
	for(int i=0;i<n;i++)
	{
		
		if(a[i]>a[i-1])sum++;
		else sum=1;
	
	    q=max(sum,q);
	}
    cout<<q<<endl; 
	return 0;
} 
